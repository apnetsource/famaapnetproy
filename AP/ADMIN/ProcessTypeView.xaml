		<TextBlock Text="Descripcion:" Visibility="Hidden" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,6,74" Grid.Row="2" Height="16" Width="62" RenderTransformOrigin="0.589,-0.906"   />
